/* 雏雁小程序全局样式 */

/* 颜色变量定义 */
:root {
  /* 主题色 - 淡蓝色系（清新风） */
  --primary-color: #4a90e2; /* 主色调（淡蓝色） */
  --primary-light: #e8f0fe; /* 主色调浅色 */
  --primary-dark: #357abd; /* 主色调深色 */
  
  /* 辅助色 */
  --accent-color: #50e3c2; /* 强调色（薄荷绿，与淡蓝色搭配，清新感） */
  
  /* 文本色 */
  --text-primary: #333333; /* 主要文本 */
  --text-secondary: #666666; /* 次要文本 */
  --text-light: #999999; /* 浅色文本 */
  
  /* 背景色 */
  --bg-primary: #ffffff; /* 主要背景 */
  --bg-secondary: #f8f9fa; /* 次要背景（更浅的灰色，增强清新感） */
  --bg-tertiary: #f0f2f5; /* 三级背景 */
  
  /* 边框色 */
  --border-color: #e0e0e0; /* 边框颜色 */
  
  /* 状态色 */
  --success-color: #4caf50; /* 成功 */
  --warning-color: #ff9800; /* 警告 */
  --error-color: #f44336; /* 错误 */
  --info-color: #2196f3; /* 信息 */
}

/* 基础样式重置 */
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  background-color: var(--bg-secondary);
  color: var(--text-primary);
  font-size: 28rpx;
  line-height: 1.5;
}

/* 通用容器 */
.container {
  padding: 20rpx;
  box-sizing: border-box;
  min-height: 100vh;
}

/* 页面标题 */
.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: 30rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid var(--border-color);
}

/* 通用按钮样式 */
.btn {
  display: inline-block;
  padding: 20rpx 40rpx;
  background-color: var(--primary-color);
  color: #ffffff;
  border-radius: 8rpx;
  text-align: center;
  font-size: 28rpx;
  cursor: pointer;
  transition: all 0.3s ease;
}

.btn:active {
  background-color: var(--primary-dark);
  transform: scale(0.98);
}

/* 次要按钮 */
.btn-secondary {
  background-color: var(--bg-tertiary);
  color: var(--text-primary);
  border: 2rpx solid var(--border-color);
}

.btn-secondary:active {
  background-color: var(--border-color);
}

/* 通用列表项样式 */
.item {
  background-color: var(--bg-primary);
  padding: 24rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  transition: box-shadow 0.3s ease;
}

.item:active {
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.12);
}

/* 文本样式 */
.text-primary {
  color: var(--text-primary);
}

.text-secondary {
  color: var(--text-secondary);
}

.text-light {
  color: var(--text-light);
}

/* 字体大小 */
.text-xs {
  font-size: 22rpx;
}

.text-sm {
  font-size: 24rpx;
}

.text-base {
  font-size: 28rpx;
}

.text-lg {
  font-size: 32rpx;
}

.text-xl {
  font-size: 36rpx;
}

.text-2xl {
  font-size: 40rpx;
}

/* 间距工具类 */
.mt-10 {
  margin-top: 10rpx;
}

.mt-20 {
  margin-top: 20rpx;
}

.mb-10 {
  margin-bottom: 10rpx;
}

.mb-20 {
  margin-bottom: 20rpx;
}

.p-10 {
  padding: 10rpx;
}

.p-20 {
  padding: 20rpx;
}

/* 布局工具类 */
.flex {
  display: flex;
}

.flex-col {
  flex-direction: column;
}

.items-center {
  align-items: center;
}

.justify-center {
  justify-content: center;
}

.justify-between {
  justify-content: space-between;
}

/* 卡片样式 */
.card {
  background-color: var(--bg-primary);
  border-radius: 12rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 20rpx;
}

/* 输入框样式 */
.input {
  width: 100%;
  padding: 20rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}

.input:focus {
  border-color: var(--primary-color);
  outline: none;
}
