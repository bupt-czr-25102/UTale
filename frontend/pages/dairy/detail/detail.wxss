/* 日记详情页样式 - 团队模板适配版 */
page {
  background-color: #f8f8f8;
}
.detail-container {
  padding: 30rpx 20rpx;
  font-family: "PingFang SC", "微软雅黑";
}
/* 顶部日期+心情 */
.top-info {
  margin-bottom: 30rpx;
}
.date {
  font-size: 28rpx;
  color: #666;
  text-align: right;
}
.mood {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-top: 10rpx;
}
/* 分隔线 */
.line {
  width: 100%;
  height: 2rpx;
  background-color: #f0f0f0;
  margin: 20rpx 0;
}
/* 日记内容 */
.content-wrap {
  font-size: 30rpx;
  color: #333;
  line-height: 1.8;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
  margin-bottom: 30rpx;
  min-height: 200rpx;
}
/* AI内容区 */
.ai-wrap {
  background-color: #fff;
  padding: 25rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
  margin-bottom: 40rpx;
}
.ai-title {
  font-size: 28rpx;
  color: #1aad19;
  font-weight: 500;
  margin: 10rpx 0 15rpx;
}
.ai-content, .ai-blessing {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  padding-left: 15rpx;
  border-left: 4rpx solid #1aad19;
  margin-bottom: 20rpx;
}
/* 重新编辑按钮 */
.edit-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #fff;
  color: #333;
  font-size: 30rpx;
  border-radius: 40rpx;
  border: 2rpx solid #f0f0f0;
}
/* 按钮点击反馈 */
.edit-btn:active {
  background-color: #f5f5f5;
  transform: scale(0.98);
}
