/* AI日记日历首页样式 - 团队模板适配版 */
page {
  background-color: #f8f8f8; /* 与团队模板背景色统一 */
}
.diary-container {
  padding: 30rpx 20rpx;
  font-family: "PingFang SC", "微软雅黑";
}
/* 日历标题 */
.calendar-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  text-align: center;
  margin-bottom: 30rpx;
}
/* 星期栏布局 */
.calendar-week {
  display: flex;
  justify-content: space-around;
  background-color: #fff;
  padding: 18rpx 0;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05); /* 轻微阴影，与团队模板一致 */
}
.week-item {
  font-size: 28rpx;
  color: #666;
  width: 12%;
  text-align: center;
}
/* 日期栏布局（7列） */
.calendar-days {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  gap: 10rpx;
}
/* 单个日期样式 */
.day-item {
  width: 12%;
  height: 100rpx;
  font-size: 28rpx;
  color: #333;
  text-align: center;
  line-height: 40rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.04);
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}
/* 已写日记：底部绿色小点点 */
.day-item.has-diary::after {
  content: "";
  width: 12rpx;
  height: 12rpx;
  background-color: #1aad19; /* 微信绿，与团队按钮色统一 */
  border-radius: 50%;
  position: absolute;
  bottom: 8rpx;
}
/* 周末日期：灰色 */
.weekend {
  color: #999;
}
/* 节假日文字：红色 */
.holiday {
  font-size: 20rpx;
  color: #e64340;
}
/* 补位日期：浅灰不可点击 */
.disabled {
  color: #eee;
  background-color: #f5f5f5;
  pointer-events: none;
}
/* 日期点击反馈 */
.day-item:active {
  background-color: #f0f0f0;
  transform: scale(0.98);
}
