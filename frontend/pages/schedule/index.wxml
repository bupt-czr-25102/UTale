
<!-- 顶部日期栏 -->
<scroll-view class="date-scroll" scroll-x="true">
  <view 
    wx:for="{{dateList}}" 
    wx:key="index"
    class="date-item {{selectedIndex == index ? 'active' : ''}}"
    bindtap="onDateTap"
    data-index="{{index}}"
  >
    {{item.dateText}}
  </view>
</scroll-view>

<!-- 主体内容区域 -->
<view class="content">

</view>

<!-- 底部加号按钮 -->
<view class="add-btn" bindtap="onAddTap">
  +
</view>
