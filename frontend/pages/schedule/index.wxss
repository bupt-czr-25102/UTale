/* 顶部日期栏 */
.date-scroll {
    white-space: nowrap;
    padding: 20rpx 0;
    background: #fff;
  }
  
  .date-item {
    display: inline-block;
    width: 100rpx;
    text-align: center;
    margin: 0 10rpx;
    padding: 10rpx 0;
    border-radius: 8rpx;
    font-size: 28rpx;
    color: #999;
  }
  
  .date-item.active {
    background: #ff4757;
    color: #fff;
  }
  
  /* 重要性排序按钮 */
  .sort-btn {
    position: fixed;
    top: 20rpx;
    left: 20rpx;
    z-index: 100;
    background: #f5f5f5;
    border-radius: 20rpx;
    padding: 10rpx 20rpx;
    font-size: 24rpx;
  }
  
  /* 底部加号按钮 */
  .add-btn {
    position: fixed;
    bottom: 40rpx;
    left: 50%;
    transform: translateX(-50%);
    width: 80rpx;
    height: 80rpx;
    background: #ff4757;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
    font-size: 36rpx;
    box-shadow: 0 0 10rpx rgba(0,0,0,0.1);
  }
  
  /* 页面主体 */
  .content {
    padding-top: 120rpx;
    min-height: 100vh;
    background: #f9f9f9;
  }
